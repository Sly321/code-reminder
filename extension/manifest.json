{
  "manifest_version": 2,

  "name": "Code Reminder",
  "description": "This extension will help you to manage your code snippets and code reminders.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Code Reminder"
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "update-url": "https://github.com/Sly321/code-reminder/raw/master/update/update.xml"
}
